@article{CiB08, 
	author = {Miguel A. Bandres and Julio C. Guti\'{e}rrez-Vega}, 
	journal = {Opt. Lett.}, 
	keywords = {Paraxial wave optics ; ABCD transforms ; Diffraction theory; Propagation},
