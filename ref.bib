@article{ValBE16, 
	author = {Giuseppe Vallone and Anna Sponselli and Vincenzo D'Ambrosio and Lorenzo Marrucci and Fabio Sciarrino and Paolo Villoresi}, 
	journal = {Opt. Express}, 
	keywords = {Paraxial wave optics ; Liquid-crystal devices; Wave propagation},
	number = {15}, 
	pages = {16390--16395}, 
	publisher = {OSA},
	title = {Birth and evolution of an optical vortex}, 
	volume = {24}, 
	month = {Jul},
	year = {2016},
	url = {http://www.opticsexpress.org/abstract.cfm?URI=oe-24-15-16390},
	doi = {10.1364/OE.24.016390},
	abstract = {When a phase singularity is suddenly imprinted on the axis of an ordinary Gaussian beam, an optical vortex appears and starts to grow radially, by effect of diffraction. This radial growth and the subsequent evolution of the optical vortex under focusing or imaging can be well described in general within the recently introduced theory of circular beams, which generalize the hypergeometric-Gaussian beams and which obey novel kinds of ABCD rules. Here, we investigate experimentally these vortex propagation phenomena and test the validity of circular-beam theory. Moreover, we analyze the difference in radial structure between the newly generated optical vortex and the vortex obtained in the image plane, where perfect imaging would lead to complete closure of the vortex core.},
}


